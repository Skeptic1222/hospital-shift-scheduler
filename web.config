<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <webSocket enabled="true" />
    <staticContent>
      <remove fileExtension=".json" />
      <mimeMap fileExtension=".json" mimeType="application/json" />
      <remove fileExtension=".webmanifest" />
      <mimeMap fileExtension=".webmanifest" mimeType="application/manifest+json" />
      <remove fileExtension=".woff" />
      <mimeMap fileExtension=".woff" mimeType="font/woff" />
      <remove fileExtension=".woff2" />
      <mimeMap fileExtension=".woff2" mimeType="font/woff2" />
    </staticContent>
    <!-- Reverse proxy API and WebSocket to Node on :3001 -->
    <rewrite>
      <rules>
        <!-- PWA icons -> serve from API to avoid 404s when not present in build/ -->
        <rule name="PwaIcon192" stopProcessing="true">
          <match url="^(scheduler/)?android-chrome-192x192\.png$" />
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
          </conditions>
          <action type="Rewrite" url="http://localhost:3001/api/assets/icon?size=192" />
        </rule>
        <rule name="PwaIcon512" stopProcessing="true">
          <match url="^(scheduler/)?android-chrome-512x512\.png$" />
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
          </conditions>
          <action type="Rewrite" url="http://localhost:3001/api/assets/icon?size=512" />
        </rule>
        <rule name="AppleTouchIcon" stopProcessing="true">
          <match url="^(scheduler/)?apple-touch-icon\.png$" />
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
          </conditions>
          <action type="Rewrite" url="http://localhost:3001/api/assets/icon?size=180" />
        </rule>
        <!-- Proxy Socket.io/WebSocket traffic (supports app at root or /scheduler) -->
        <rule name="ProxySocketIO" stopProcessing="true">
          <match url="^(scheduler/)?socket\.io/(.*)" />
          <action type="Rewrite" url="http://localhost:3001/socket.io/{R:2}" />
        </rule>
        <!-- Proxy API (supports app at root or /scheduler) -->
        <rule name="ProxyAPI" stopProcessing="true">
          <match url="^(scheduler/)?api/(.*)" />
          <action type="Rewrite" url="http://localhost:3001/api/{R:2}" />
        </rule>
        <!-- Serve build assets directly -->
        <rule name="StaticBuildAssets" stopProcessing="true">
          <match url="^(build/.+)" />
          <action type="None" />
        </rule>
        <!-- Map CRA/PWA static assets from root to build/ -->
        <rule name="StaticRootAssets" stopProcessing="true">
          <match url="^(static/.+|asset-manifest\.json|manifest\.json|site\.webmanifest|favicon(.*)?\.ico|favicon-.*\.png|logo.*\.png|apple-touch-icon\.png|android-chrome-.*\.png|robots\.txt)$" />
          <action type="Rewrite" url="build/{R:0}" />
        </rule>
        <!-- Map CRA/PWA static assets when app is mounted at /scheduler -->
        <rule name="StaticRootAssetsWithPrefix" stopProcessing="true">
          <match url="^scheduler/(static/.+|asset-manifest\.json|manifest\.json|site\.webmanifest|favicon(.*)?\.ico|favicon-.*\.png|logo.*\.png|apple-touch-icon\.png|android-chrome-.*\.png|robots\.txt)$" />
          <action type="Rewrite" url="build/{R:1}" />
        </rule>
        <!-- SPA fallback to build/index.html for client routes under /scheduler -->
        <rule name="SpaFallback" stopProcessing="true">
          <match url="^(.*)$" />
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <add input="{REQUEST_URI}" pattern="^/build/" negate="true" />
            <add input="{REQUEST_URI}" pattern="^/api/" negate="true" />
            <add input="{REQUEST_URI}" pattern="^/socket\.io/" negate="true" />
            <add input="{REQUEST_URI}" pattern="^/scheduler/socket\.io/" negate="true" />
            <add input="{REQUEST_URI}" pattern="^/scheduler/api/" negate="true" />
            <add input="{REQUEST_URI}" pattern="^/android-chrome-.*\.png$" negate="true" />
            <add input="{REQUEST_URI}" pattern="^/apple-touch-icon\.png$" negate="true" />
            <add input="{REQUEST_URI}" pattern="^/favicon-.*\.png$" negate="true" />
            <add input="{REQUEST_URI}" pattern="^/site\.webmanifest$" negate="true" />
          </conditions>
          <action type="Rewrite" url="build/index.html" />
        </rule>
      </rules>
    </rewrite>
    <!-- Required when using ARR Reverse Proxy -->
    <proxy enabled="true" preserveHostHeader="true" reverseRewriteHostInResponseHeaders="false" />
    <httpProtocol>
      <customHeaders>
        <remove name="X-Powered-By" />
        <add name="X-Content-Type-Options" value="nosniff" />
        <add name="Cache-Control" value="no-cache, no-store, must-revalidate" />
        <add name="Pragma" value="no-cache" />
        <add name="Expires" value="0" />
      </customHeaders>
    </httpProtocol>
    <defaultDocument>
      <files>
        <clear />
        <add value="build/index.html" />
      </files>
    </defaultDocument>
    <directoryBrowse enabled="false" />
  </system.webServer>
</configuration>
