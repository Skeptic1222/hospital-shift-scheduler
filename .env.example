# Auth0 Configuration
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret
AUTH0_AUDIENCE=https://your-api-audience

# Database Configuration
DB_SERVER=localhost\SQLEXPRESS
DB_NAME=HospitalScheduler
DB_USER=sa
DB_PASSWORD=your-password
DB_TRUST_CONNECTION=false
USE_WINDOWS_AUTH=false
DB_ENCRYPT=true
DB_TRUST_SERVER_CERT=true

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Security
JWT_SECRET=your-jwt-secret-key
ENCRYPTION_KEY=your-32-char-encryption-key

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Push Notifications (VAPID)
VAPID_PUBLIC_KEY=your-public-key
VAPID_PRIVATE_KEY=your-private-key

# CORS Configuration
ALLOWED_ORIGINS=http://localhost,http://localhost:3000,http://YOUR_PUBLIC_IP

# Public Base URL for client (no ports in browser URL)
# Example when hosted under IIS as /scheduler
REACT_APP_PUBLIC_BASE=http://localhost/scheduler

# Environment
NODE_ENV=development
PORT=3001
TRUST_PROXY=1

# Demo Mode (set to true to use demo data without external services)
DEMO_MODE=false
SKIP_EXTERNALS=false

# Demo admin/supervisor emails for local/dev role elevation
ADMIN_EMAILS=
SUPERVISOR_EMAILS=

# Client-side copies (optional)
REACT_APP_ADMIN_EMAILS=admin@demo.hospital.com
REACT_APP_SUPERVISOR_EMAILS=supervisor@demo.hospital.com
