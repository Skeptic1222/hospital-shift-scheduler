# Auth Configuration
# Current build verifies Google ID tokens server-side
GOOGLE_CLIENT_ID=your-google-client-id
REACT_APP_GOOGLE_CLIENT_ID=your-google-client-id

# Auth0 (deprecated - Google OAuth is now the primary authentication method)
# AUTH0_DOMAIN=your-domain.auth0.com
# AUTH0_CLIENT_ID=your-client-id
# AUTH0_CLIENT_SECRET=your-client-secret
# AUTH0_AUDIENCE=https://your-api-audience

# Database Configuration
DB_SERVER=localhost\SQLEXPRESS
DB_NAME=HospitalScheduler
DB_USER=sa
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_REQUIRED
DB_TRUST_CONNECTION=false
USE_WINDOWS_AUTH=false
DB_ENCRYPT=true
DB_TRUST_SERVER_CERT=true

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Security
# IMPORTANT: Generate a strong secret with: openssl rand -base64 32
# Must be at least 32 characters long for production
# NEVER use these default values in production!
JWT_SECRET=CHANGE_THIS_USE_openssl_rand_base64_32_TO_GENERATE
ENCRYPTION_KEY=CHANGE_THIS_USE_openssl_rand_hex_32_TO_GENERATE_KEY
# Comma-separated list of admin emails for initial bootstrap (server-side)
ADMIN_EMAILS=

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Push Notifications (VAPID)
VAPID_PUBLIC_KEY=your-public-key
VAPID_PRIVATE_KEY=your-private-key

# CORS Configuration
# ⚠️ CRITICAL: NO PORTS IN URLS - See NO-PORT-RULE.md
# IIS proxies /scheduler externally to an internal service port
# NEVER include ports or paths here; origins are scheme + host only
ALLOWED_ORIGINS=http://localhost,https://localhost,http://YOUR_PUBLIC_IP,https://YOUR_DOMAIN

# API Base URL Configuration
# ⚠️ CRITICAL: NO PORTS IN URLS - See NO-PORT-RULE.md
# For IIS deployment: Use relative path /scheduler/api
# IIS proxies /scheduler -> internal port 3001
# REACT_APP_API_BASE_URL=/scheduler/api

# Environment
NODE_ENV=development
PORT=3001
TRUST_PROXY=1

# Dev proxy helpers (used by CRA setupProxy to detect Windows host under WSL)
WIN_HOST=
WIN_PUBLIC_URL=

# Demo mode is not supported. Do not add demo toggles or bypasses.
